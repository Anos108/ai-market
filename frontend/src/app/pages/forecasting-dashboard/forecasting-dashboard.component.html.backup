<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Forecasting Dashboard</h1>
          <p class="text-gray-600 mt-1">Day & Swing Trading Forecasts</p>
        </div>
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-600">Auto-refresh:</span>
            <button 
              (click)="toggleAutoRefresh()"
              [class]="autoRefresh ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'"
              class="px-3 py-1 rounded-md text-sm font-medium transition-colors">
              {{ autoRefresh ? 'ON' : 'OFF' }}
            </button>
          </div>
          <button 
            (click)="loadAllData()"
            [disabled]="isLoading"
            class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 disabled:opacity-50 transition-colors">
            <span *ngIf="isLoading">Loading...</span>
            <span *ngIf="!isLoading">Refresh</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Error Alert -->
  <div *ngIf="error" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-red-800">{{ error }}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation Tabs -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8">
        <button 
          (click)="setActiveTab('day-forecasts')"
          [class]="activeTab === 'day-forecasts' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
          class="whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm transition-colors">
          Day Forecasts
        </button>
        <button 
          (click)="setActiveTab('swing-forecasts')"
          [class]="activeTab === 'swing-forecasts' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
          class="whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm transition-colors">
          Swing Forecasts
        </button>
        <button 
          (click)="setActiveTab('comparison')"
          [class]="activeTab === 'comparison' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
          class="whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm transition-colors">
          Comparison
        </button>
        <button 
          (click)="setActiveTab('generate')"
          [class]="activeTab === 'generate' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
          class="whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm transition-colors">
          Generate Forecasts
        </button>
        <button 
          (click)="setActiveTab('advanced')"
          [class]="activeTab === 'advanced' ? 'border-purple-500 text-purple-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
          class="whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm transition-colors">
          <span class="flex items-center space-x-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <span>Advanced Forecasts</span>
          </span>
        </button>
      </nav>
    </div>
  </div>

  <!-- Tab Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
    

    <!-- Day Forecasts Tab -->
    <div *ngIf="activeTab === 'day-forecasts'" class="space-y-6">
      <div *ngIf="!isLoadingDayForecasts; else dayForecastsLoading" class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex justify-between items-center">
            <h3 class="text-lg font-medium text-gray-900">Day Trading Forecasts</h3>
            <div class="flex items-center space-x-4">
              <label for="dayFilter" class="text-sm font-medium text-gray-700">Filter by Signal:</label>
              <select 
                id="dayFilter"
                [(ngModel)]="selectedDayFilter" 
                name="dayFilter"
                class="border border-gray-300 rounded-md px-3 py-1 text-sm focus:ring-blue-500 focus:border-blue-500">
                <option *ngFor="let option of filterOptions" [value]="option.value">
                  {{ option.label }}
                  <span *ngIf="option.value !== 'all'">({{ getSignalCount(dayForecasts, option.value) }})</span>
                </option>
              </select>
              <span class="text-sm text-gray-500">
                {{ filteredDayForecasts.length }} of {{ dayForecasts.length }} forecasts
              </span>
            </div>
          </div>
          <div class="px-6 py-2 bg-gray-50 border-b border-gray-200">
            <div class="flex items-center space-x-4 text-xs">
              <span class="text-gray-600">Signal Distribution:</span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                BUY: {{ getSignalCount(dayForecasts, 'BUY') }}
              </span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                HOLD: {{ getSignalCount(dayForecasts, 'HOLD') }}
              </span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                SELL: {{ getSignalCount(dayForecasts, 'SELL') }}
              </span>
            </div>
          </div>
        </div>
        <div class="p-6">
          <div *ngIf="filteredDayForecasts.length > 0">
            <!-- Compact Table Header -->
            <div class="bg-gray-50 rounded-t-lg border border-b-0">
              <div class="grid grid-cols-12 gap-4 px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="col-span-2">Symbol</div>
                <div class="col-span-1">Signal</div>
                <div class="col-span-1">Confidence</div>
                <div class="col-span-2">Predicted Price</div>
                <div class="col-span-1">Risk</div>
                <div class="col-span-1">Valid Until</div>
                <div class="col-span-2">Market Regime</div>
                <div class="col-span-2">Actions</div>
              </div>
            </div>
            
            <!-- Compact Table Rows -->
            <div *ngFor="let forecast of filteredDayForecasts; trackBy: trackBySymbol" class="border-l border-r border-b border-gray-200 last:rounded-b-lg">
              <!-- Main Row -->
              <div class="grid grid-cols-12 gap-4 px-4 py-3 hover:bg-gray-50 cursor-pointer" (click)="toggleDayForecastExpansion(forecast.symbol)">
                <div class="col-span-2 flex items-center">
                  <span class="font-semibold text-gray-900">{{ forecast.symbol }}</span>
                  <svg class="w-4 h-4 ml-2 text-gray-400 transition-transform" [class.rotate-180]="isDayForecastExpanded(forecast.symbol)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
                <div class="col-span-1 flex items-center">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium" [class]="getDirectionColor(forecast.direction)">
                    {{ forecast.direction.toUpperCase() }}
                  </span>
                </div>
                <div class="col-span-1 flex items-center">
                  <span [class]="getConfidenceColor(forecast.confidence)" class="text-sm font-semibold">{{ formatPercent(forecast.confidence) }}</span>
                </div>
                <div class="col-span-2 flex items-center">
                  <span class="font-semibold text-gray-900">{{ formatCurrency(forecast.predicted_price) }}</span>
                </div>
                <div class="col-span-1 flex items-center">
                  <span [class]="getRiskColor(forecast.risk_score)" class="text-sm font-semibold">{{ formatPercent(forecast.risk_score) }}</span>
                </div>
                <div class="col-span-1 flex items-center">
                  <span class="text-sm text-gray-600">{{ getTimeRemaining(forecast.valid_until) }}</span>
                </div>
                <div class="col-span-2 flex items-center">
                  <span class="text-sm text-gray-600">{{ forecast.market_regime }}</span>
                </div>
                <div class="col-span-2 flex items-center">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium" [class]="getSignalStrengthColor(forecast.signal_strength)">
                    {{ forecast.signal_strength.replace('_', ' ').toUpperCase() }}
                  </span>
                </div>
              </div>
              
              <!-- Expanded Details -->
              <div *ngIf="isDayForecastExpanded(forecast.symbol)" class="bg-gray-50 border-t border-gray-200 px-4 py-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                  <!-- Price Details -->
                  <div>
                    <h6 class="font-medium text-gray-900 mb-3">Price Analysis</h6>
                    <div class="space-y-2">
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Current Price:</span>
                        <span class="text-sm font-medium">{{ formatCurrency(forecast.current_price) }}</span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Predicted Price:</span>
                        <span class="text-sm font-semibold text-blue-600">{{ formatCurrency(forecast.predicted_price) }}</span>
                      </div>
                      <div *ngIf="forecast.current_price" class="flex justify-between">
                        <span class="text-sm text-gray-600">Expected Change:</span>
                        <span [class]="getPriceChange(forecast.current_price, forecast.predicted_price) >= 0 ? 'text-green-600' : 'text-red-600'" class="text-sm font-semibold">
                          {{ getPriceChange(forecast.current_price, forecast.predicted_price) >= 0 ? '+' : '' }}{{ formatNumber(getPriceChange(forecast.current_price, forecast.predicted_price), 1) }}%
                        </span>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Technical Indicators -->
                  <div>
                    <h6 class="font-medium text-gray-900 mb-3">Technical Indicators</h6>
                    <div *ngIf="forecast.technical_indicators.length > 0" class="space-y-2">
                      <div *ngFor="let indicator of forecast.technical_indicators" class="flex justify-between items-center">
                        <span class="text-sm font-medium">{{ indicator.name }}</span>
                        <div class="flex items-center space-x-2">
                          <span [class]="indicator.signal === 'buy' ? 'text-green-600' : indicator.signal === 'sell' ? 'text-red-600' : 'text-gray-600'" class="text-xs font-medium">
                            {{ indicator.signal.toUpperCase() }}
                          </span>
                          <span class="text-xs text-gray-500">({{ formatNumber(indicator.strength * 100, 0) }}%)</span>
                        </div>
                      </div>
                    </div>
                    <div *ngIf="forecast.technical_indicators.length === 0" class="text-sm text-gray-500">
                      No technical indicators available
                    </div>
                  </div>
                  
                  <!-- Market Conditions -->
                  <div>
                    <h6 class="font-medium text-gray-900 mb-3">Market Conditions</h6>
                    <div class="space-y-2">
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Volatility Forecast:</span>
                        <span class="text-sm font-medium">{{ formatPercent(forecast.volatility_forecast) }}</span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Volume Forecast:</span>
                        <span class="text-sm font-medium">{{ formatNumber(forecast.volume_forecast, 0) }}</span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Valid Until:</span>
                        <span class="text-sm font-medium text-blue-600">{{ formatDateTime(forecast.valid_until) }}</span>
                      </div>
                    </div>
                    
                    <!-- Timing Information -->
                    <div class="mt-4 bg-blue-50 rounded-lg p-3 border border-blue-200">
                      <h6 class="font-medium text-blue-900 mb-2">Signal Timing</h6>
                      <p class="text-sm text-blue-800" *ngIf="forecast.direction === 'buy'">
                        Buy before target price {{ formatCurrency(forecast.predicted_price) }} is reached
                      </p>
                      <p class="text-sm text-blue-800" *ngIf="forecast.direction === 'hold'">
                        Hold until market conditions change
                      </p>
                      <p class="text-sm text-blue-800" *ngIf="forecast.direction === 'sell'">
                        Sell before target price {{ formatCurrency(forecast.predicted_price) }} is reached
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div *ngIf="dayForecasts.length === 0" class="text-center py-8">
            <p class="text-gray-500">No day forecasts available</p>
            <p class="text-sm text-gray-400 mt-2">Generate forecasts using the "Generate Forecasts" tab</p>
          </div>
          <div *ngIf="dayForecasts.length > 0 && filteredDayForecasts.length === 0" class="text-center py-8">
            <p class="text-gray-500">No {{ selectedDayFilter.toLowerCase() }} signals found</p>
            <p class="text-sm text-gray-400 mt-2">Try changing the filter to see other signals</p>
          </div>
        </div>
      </div>

      <ng-template #dayForecastsLoading>
        <app-skeleton type="card"></app-skeleton>
      </ng-template>
    </div>

    <!-- Swing Forecasts Tab -->
    <div *ngIf="activeTab === 'swing-forecasts'" class="space-y-6">
      <div *ngIf="!isLoadingSwingForecasts; else swingForecastsLoading" class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex justify-between items-center">
            <h3 class="text-lg font-medium text-gray-900">Swing Trading Forecasts</h3>
            <div class="flex items-center space-x-4">
              <label for="swingFilter" class="text-sm font-medium text-gray-700">Filter by Signal:</label>
              <select 
                id="swingFilter"
                [(ngModel)]="selectedSwingFilter" 
                name="swingFilter"
                class="border border-gray-300 rounded-md px-3 py-1 text-sm focus:ring-green-500 focus:border-green-500">
                <option *ngFor="let option of filterOptions" [value]="option.value">
                  {{ option.label }}
                  <span *ngIf="option.value !== 'all'">({{ getSignalCount(swingForecasts, option.value) }})</span>
                </option>
              </select>
              <span class="text-sm text-gray-500">
                {{ filteredSwingForecasts.length }} of {{ swingForecasts.length }} forecasts
              </span>
            </div>
          </div>
          <div class="px-6 py-2 bg-gray-50 border-b border-gray-200">
            <div class="flex items-center space-x-4 text-xs">
              <span class="text-gray-600">Signal Distribution:</span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                BUY: {{ getSignalCount(swingForecasts, 'BUY') }}
              </span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                HOLD: {{ getSignalCount(swingForecasts, 'HOLD') }}
              </span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                SELL: {{ getSignalCount(swingForecasts, 'SELL') }}
              </span>
            </div>
          </div>
        </div>
        <div class="p-6">
          <div *ngIf="filteredSwingForecasts.length > 0">
            <!-- Compact Table Header -->
            <div class="bg-gray-50 rounded-t-lg border border-b-0">
              <div class="grid grid-cols-12 gap-4 px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="col-span-2">Symbol</div>
                <div class="col-span-1">Signal</div>
                <div class="col-span-1">Confidence</div>
                <div class="col-span-2">Predicted Price</div>
                <div class="col-span-1">Risk</div>
                <div class="col-span-1">Valid Until</div>
                <div class="col-span-2">Trend</div>
                <div class="col-span-2">Actions</div>
              </div>
            </div>
            
            <!-- Compact Table Rows -->
            <div *ngFor="let forecast of filteredSwingForecasts; trackBy: trackBySymbol" class="border-l border-r border-b border-gray-200 last:rounded-b-lg">
              <!-- Main Row -->
              <div class="grid grid-cols-12 gap-4 px-4 py-3 hover:bg-gray-50 cursor-pointer" (click)="toggleSwingForecastExpansion(forecast.symbol)">
                <div class="col-span-2 flex items-center">
                  <span class="font-semibold text-gray-900">{{ forecast.symbol }}</span>
                  <svg class="w-4 h-4 ml-2 text-gray-400 transition-transform" [class.rotate-180]="isSwingForecastExpanded(forecast.symbol)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
                <div class="col-span-1 flex items-center">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium" [class]="getDirectionColor(forecast.direction)">
                    {{ forecast.direction.toUpperCase() }}
                  </span>
                </div>
                <div class="col-span-1 flex items-center">
                  <span [class]="getConfidenceColor(forecast.confidence)" class="text-sm font-semibold">{{ formatPercent(forecast.confidence) }}</span>
                </div>
                <div class="col-span-2 flex items-center">
                  <span class="font-semibold text-gray-900">{{ formatCurrency(forecast.predicted_price) }}</span>
                </div>
                <div class="col-span-1 flex items-center">
                  <span [class]="getRiskColor(forecast.risk_score)" class="text-sm font-semibold">{{ formatPercent(forecast.risk_score) }}</span>
                </div>
                <div class="col-span-1 flex items-center">
                  <span class="text-sm text-gray-600">{{ getTimeRemaining(forecast.valid_until) }}</span>
                </div>
                <div class="col-span-2 flex items-center">
                  <span class="text-sm text-gray-600 capitalize">{{ forecast.trend }}</span>
                </div>
                <div class="col-span-2 flex items-center">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium" [class]="getSignalStrengthColor(forecast.signal_strength)">
                    {{ forecast.signal_strength.replace('_', ' ').toUpperCase() }}
                  </span>
                </div>
              </div>
              
              <!-- Expanded Details -->
              <div *ngIf="isSwingForecastExpanded(forecast.symbol)" class="bg-gray-50 border-t border-gray-200 px-4 py-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                  <!-- Price Details -->
                  <div>
                    <h6 class="font-medium text-gray-900 mb-3">Price Analysis</h6>
                    <div class="space-y-2">
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Current Price:</span>
                        <span class="text-sm font-medium">{{ formatCurrency(forecast.current_price) }}</span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Predicted Price:</span>
                        <span class="text-sm font-semibold text-green-600">{{ formatCurrency(forecast.predicted_price) }}</span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Target Price:</span>
                        <span class="text-sm font-semibold text-green-600">{{ formatCurrency(forecast.target_price) }}</span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Stop Loss:</span>
                        <span class="text-sm font-semibold text-red-600">{{ formatCurrency(forecast.stop_loss) }}</span>
                      </div>
                      <div *ngIf="forecast.current_price" class="flex justify-between">
                        <span class="text-sm text-gray-600">Expected Change:</span>
                        <span [class]="getPriceChange(forecast.current_price, forecast.predicted_price) >= 0 ? 'text-green-600' : 'text-red-600'" class="text-sm font-semibold">
                          {{ getPriceChange(forecast.current_price, forecast.predicted_price) >= 0 ? '+' : '' }}{{ formatNumber(getPriceChange(forecast.current_price, forecast.predicted_price), 1) }}%
                        </span>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Trading Levels -->
                  <div>
                    <h6 class="font-medium text-gray-900 mb-3">Trading Levels</h6>
                    <div class="space-y-3">
                      <div class="bg-green-50 rounded-lg p-3 border border-green-200">
                        <div class="flex justify-between items-center">
                          <span class="text-sm font-medium text-green-700">Support Level:</span>
                          <span class="text-sm font-semibold text-green-800">{{ formatCurrency(forecast.support_level) }}</span>
                        </div>
                      </div>
                      <div class="bg-red-50 rounded-lg p-3 border border-red-200">
                        <div class="flex justify-between items-center">
                          <span class="text-sm font-medium text-red-700">Resistance Level:</span>
                          <span class="text-sm font-semibold text-red-800">{{ formatCurrency(forecast.resistance_level) }}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Market Conditions -->
                  <div>
                    <h6 class="font-medium text-gray-900 mb-3">Market Conditions</h6>
                    <div class="space-y-2">
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Technical Score:</span>
                        <span class="text-sm font-medium">{{ formatPercent(forecast.technical_score) }}</span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Fundamental Score:</span>
                        <span class="text-sm font-medium">{{ formatPercent(forecast.fundamental_score) }}</span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Sentiment Score:</span>
                        <span class="text-sm font-medium">{{ formatPercent(forecast.sentiment_score) }}</span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-sm text-gray-600">Valid Until:</span>
                        <span class="text-sm font-medium text-green-600">{{ formatDateTime(forecast.valid_until) }}</span>
                      </div>
                    </div>
                    
                    <!-- Timing Information -->
                    <div class="mt-4 bg-green-50 rounded-lg p-3 border border-green-200">
                      <h6 class="font-medium text-green-900 mb-2">Signal Timing</h6>
                      <p class="text-sm text-green-800" *ngIf="forecast.direction === 'buy'">
                        Buy before target price {{ formatCurrency(forecast.predicted_price) }} is reached
                      </p>
                      <p class="text-sm text-green-800" *ngIf="forecast.direction === 'hold'">
                        Hold until market conditions change
                      </p>
                      <p class="text-sm text-green-800" *ngIf="forecast.direction === 'sell'">
                        Sell before target price {{ formatCurrency(forecast.predicted_price) }} is reached
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

              <!-- Market Events -->
              <div *ngIf="forecast.key_events.length > 0" class="mt-4 pt-4 border-t">
                <h5 class="font-medium text-gray-900 mb-2">Key Market Events</h5>
                <div class="space-y-2">
