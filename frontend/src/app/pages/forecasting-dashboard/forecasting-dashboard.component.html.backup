                   [class.text-yellow-600]="forecast.final_confidence >= 0.6 && forecast.final_confidence < 0.8"
                   [class.text-red-600]="forecast.final_confidence < 0.6">
                  {{ formatPercent(forecast.final_confidence) }}
                </p>
              </div>
            </div>

            <!-- Price Information -->
            <div class="mt-4 grid grid-cols-4 gap-4">
              <div class="bg-white bg-opacity-50 rounded-lg p-3">
                <p class="text-xs text-gray-600">Current Price</p>
                <p class="text-lg font-bold text-gray-900">{{ formatCurrency(forecast.current_price) }}</p>
              </div>
              <div class="bg-white bg-opacity-50 rounded-lg p-3">
                <p class="text-xs text-gray-600">Target Price</p>
                <p class="text-lg font-bold text-blue-600">{{ formatCurrency(forecast.target_price) }}</p>
              </div>
              <div class="bg-white bg-opacity-50 rounded-lg p-3">
                <p class="text-xs text-gray-600">Stop Loss</p>
                <p class="text-lg font-bold text-red-600">{{ formatCurrency(forecast.stop_loss) }}</p>
              </div>
              <div class="bg-white bg-opacity-50 rounded-lg p-3">
                <p class="text-xs text-gray-600">Expected Change</p>
                <p class="text-lg font-bold"
                   [class.text-green-600]="forecast.price_change_pct > 0"
                   [class.text-red-600]="forecast.price_change_pct < 0">
                  {{ forecast.price_change_pct > 0 ? '+' : '' }}{{ formatNumber(forecast.price_change_pct, 2) }}%
                </p>
              </div>
            </div>

            <!-- Timing Information -->
            <div class="mt-4 bg-gradient-to-r from-amber-50 to-orange-50 rounded-lg p-4 border-2 border-amber-200">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-amber-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <h5 class="font-semibold text-amber-900">Signal Timing</h5>
                </div>
                  <div class="text-right">
                    <p class="text-sm font-bold text-amber-800" *ngIf="forecast.final_signal === 'BUY'">
                      Buy before target price {{ formatCurrency(forecast.target_price) }} is reached
                    </p>
                    <p class="text-sm font-bold text-amber-800" *ngIf="forecast.final_signal === 'HOLD'">
                      Hold until market conditions change
                    </p>
                    <p class="text-sm font-bold text-amber-800" *ngIf="forecast.final_signal === 'SELL'">
                      Sell before target price {{ formatCurrency(forecast.target_price) }} is reached
                    </p>
                    <p class="text-xs text-amber-600 mt-1">
                      Expected by {{ formatDateTime(forecast.valid_until) }} ({{ getTimeRemaining(forecast.valid_until) }})
                    </p>
                  </div>
              </div>
            </div>
          </div>

          <!-- Forecast Details -->
          <div class="p-6 space-y-6">
            
            <!-- Agent Contributions -->
            <div *ngIf="forecast.agent_contributions && forecast.agent_contributions.length > 0">
              <h4 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Individual Agent Signals ({{ forecast.total_agents_contributing }} agents)
              </h4>
              <div class="grid grid-cols-2 gap-3">
                <div *ngFor="let agent of forecast.agent_contributions" class="bg-gray-50 rounded-lg p-3 border border-gray-200">
                  <div class="flex justify-between items-center mb-2">
                    <span class="font-medium text-sm text-gray-900">{{ agent.agent_name }}</span>
                    <span class="px-2 py-1 rounded text-xs font-bold"
                          [class.bg-green-100]="agent.signal === 'BUY'"
                          [class.text-green-800]="agent.signal === 'BUY'"
                          [class.bg-red-100]="agent.signal === 'SELL'"
                          [class.text-red-800]="agent.signal === 'SELL'"
                          [class.bg-yellow-100]="agent.signal === 'HOLD'"
                          [class.text-yellow-800]="agent.signal === 'HOLD'">
                      {{ agent.signal }}
                    </span>
                  </div>
                  <div class="flex justify-between items-center text-xs text-gray-600">
                    <span>Confidence:</span>
                    <span class="font-semibold">{{ formatPercent(agent.confidence) }}</span>
                  </div>
                  <p class="text-xs text-gray-500 mt-2 line-clamp-2">{{ agent.reasoning }}</p>
                </div>
              </div>
            </div>

            <!-- Ensemble Signal -->
            <div *ngIf="forecast.ensemble_signal" class="bg-purple-50 rounded-lg p-4 border-2 border-purple-200">
              <h4 class="text-md font-semibold text-purple-900 mb-2 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Ensemble Consensus
              </h4>
              <div class="grid grid-cols-3 gap-4">
                <div>
                  <p class="text-xs text-purple-600">Signal</p>
                  <p class="font-bold text-purple-900">{{ forecast.ensemble_signal.signal }}</p>
                </div>
                <div>
                  <p class="text-xs text-purple-600">Confidence</p>
                  <p class="font-bold text-purple-900">{{ formatPercent(forecast.ensemble_signal.confidence) }}</p>
                </div>
                <div>
                  <p class="text-xs text-purple-600">Contributors</p>
                  <p class="font-bold text-purple-900">{{ forecast.ensemble_signal.contributors?.length || 0 }} agents</p>
                </div>
              </div>
              <p class="text-sm text-gray-700 mt-2">{{ forecast.ensemble_signal.reasoning }}</p>
            </div>

            <!-- RAG Analysis -->
            <div *ngIf="forecast.rag_analysis" class="bg-blue-50 rounded-lg p-4 border-2 border-blue-200">
              <h4 class="text-md font-semibold text-blue-900 mb-2 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                RAG Event Analysis
              </h4>
              <div class="grid grid-cols-3 gap-4 mb-2">
                <div>
                  <p class="text-xs text-blue-600">Event Type</p>
                  <p class="font-bold text-blue-900">{{ forecast.rag_analysis.event_type || 'N/A' }}</p>
                </div>
                <div>
                  <p class="text-xs text-blue-600">Impact Score</p>
                  <p class="font-bold text-blue-900">{{ formatNumber(forecast.rag_analysis.impact_score, 2) }}</p>
                </div>
                <div>
                  <p class="text-xs text-blue-600">Sentiment</p>
                  <p class="font-bold text-blue-900">{{ formatNumber(forecast.rag_analysis.sentiment_score, 2) }}</p>
                </div>
              </div>
              <p class="text-sm text-gray-700 mt-2">{{ forecast.rag_analysis.summary }}</p>
            </div>

            <!-- RL Recommendation -->
            <div *ngIf="forecast.rl_recommendation" class="bg-green-50 rounded-lg p-4 border-2 border-green-200">
              <h4 class="text-md font-semibold text-green-900 mb-2 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                RL Strategy Agent
              </h4>
              <div class="grid grid-cols-4 gap-4 mb-2">
                <div>
                  <p class="text-xs text-green-600">Action</p>
                  <p class="font-bold text-green-900">{{ forecast.rl_recommendation.action }}</p>
                </div>
                <div>
                  <p class="text-xs text-green-600">Confidence</p>
                  <p class="font-bold text-green-900">{{ formatPercent(forecast.rl_recommendation.confidence) }}</p>
                </div>
                <div>
                  <p class="text-xs text-green-600">Expected Return</p>
                  <p class="font-bold text-green-900">{{ formatPercent(forecast.rl_recommendation.expected_return) }}</p>
                </div>
                <div>
                  <p class="text-xs text-green-600">Risk Score</p>
                  <p class="font-bold text-green-900">{{ formatNumber(forecast.rl_recommendation.risk_score, 2) }}</p>
                </div>
              </div>
              <p class="text-sm text-gray-700 mt-2">{{ forecast.rl_recommendation.reasoning }}</p>
            </div>

            <!-- Meta-Evaluation -->
            <div *ngIf="forecast.meta_evaluation" class="bg-indigo-50 rounded-lg p-4 border-2 border-indigo-200">
              <h4 class="text-md font-semibold text-indigo-900 mb-2 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                Meta-Evaluation
              </h4>
              <div class="grid grid-cols-4 gap-4">
                <div>
                  <p class="text-xs text-indigo-600">Top Agent</p>
                  <p class="font-bold text-indigo-900">{{ forecast.meta_evaluation.top_agent }}</p>
                </div>
                <div>
                  <p class="text-xs text-indigo-600">Performance</p>
                  <p class="font-bold text-indigo-900">{{ formatNumber(forecast.meta_evaluation.performance_score, 2) }}</p>
                </div>
                <div>
                  <p class="text-xs text-indigo-600">Recent Accuracy</p>
                  <p class="font-bold text-indigo-900">{{ formatPercent(forecast.meta_evaluation.recent_accuracy) }}</p>
                </div>
                <div>
                  <p class="text-xs text-indigo-600">Regime Fitness</p>
                  <p class="font-bold text-indigo-900">{{ formatPercent(forecast.meta_evaluation.regime_fitness) }}</p>
                </div>
              </div>
            </div>

            <!-- Latent Patterns -->
            <div *ngIf="forecast.latent_patterns && forecast.latent_patterns.length > 0" class="bg-orange-50 rounded-lg p-4 border-2 border-orange-200">
              <h4 class="text-md font-semibold text-orange-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                </svg>
                Latent Pattern Detection ({{ forecast.latent_patterns.length }} patterns)
              </h4>
              <div class="space-y-2">
                <div *ngFor="let pattern of forecast.latent_patterns" class="bg-white rounded p-3 border border-orange-200">
                  <div class="flex justify-between items-center mb-1">
                    <span class="font-medium text-sm text-orange-900">{{ pattern.type }} Pattern</span>
                    <span class="text-xs font-semibold text-orange-700">{{ formatPercent(pattern.confidence) }} confidence</span>
                  </div>
                  <div class="flex justify-between items-center text-xs text-gray-600 mb-1">
                    <span>Trend: <span class="font-semibold">{{ pattern.trend }}</span></span>
                    <span>Strength: <span class="font-semibold">{{ formatNumber(pattern.strength, 2) }}</span></span>
                  </div>
                  <p class="text-xs text-gray-600">{{ pattern.description }}</p>
                </div>
              </div>
            </div>

            <!-- Signal Distribution -->
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
              <h4 class="text-md font-semibold text-gray-900 mb-3">Agent Signal Distribution</h4>
              <div class="grid grid-cols-3 gap-4">
                <div class="text-center">
                  <p class="text-3xl font-bold text-green-600">{{ forecast.signal_distribution.BUY || 0 }}</p>
                  <p class="text-sm text-gray-600">BUY Signals</p>
                </div>
                <div class="text-center">
                  <p class="text-3xl font-bold text-yellow-600">{{ forecast.signal_distribution.HOLD || 0 }}</p>
                  <p class="text-sm text-gray-600">HOLD Signals</p>
                </div>
                <div class="text-center">
                  <p class="text-3xl font-bold text-red-600">{{ forecast.signal_distribution.SELL || 0 }}</p>
                  <p class="text-sm text-gray-600">SELL Signals</p>
                </div>
              </div>
            </div>

            <!-- Timestamp -->
            <div class="text-center text-xs text-gray-500 pt-4 border-t">
              <p>Forecast generated at {{ forecast.timestamp | date:'medium' }} â€¢ Valid until {{ forecast.valid_until | date:'medium' }}</p>
              <p class="mt-1 text-purple-600 font-semibold">ðŸŽ¯ Advanced Multi-Agent Forecast by {{ forecast.forecast_type }}</p>
            </div>

          </div>
        </div>
      </div>

      <!-- Empty Filter Results -->
      <div *ngIf="!isLoadingAdvanced && advancedForecasts.length > 0 && filteredAdvancedForecasts.length === 0" class="text-center py-12 bg-white rounded-lg shadow-md">
        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No {{ selectedAdvancedFilter }} Signals Found</h3>
        <p class="mt-2 text-gray-500">Try selecting a different filter option</p>
      </div>

      <!-- Empty State -->
      <div *ngIf="!isLoadingAdvanced && advancedForecasts.length === 0" class="text-center py-12">
        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No Advanced Forecasts Generated</h3>
        <p class="mt-2 text-gray-500">Click "Generate Advanced Forecasts" to get comprehensive AI-powered predictions</p>
      </div>
    </div>

  </div>
</div>
